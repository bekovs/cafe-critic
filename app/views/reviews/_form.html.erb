<% if current_user.nil? %>
  <b>Please log in to leave a review</b>
<% else %>

  <%= form_for [@shop, @shop.reviews.build], remote: true do |f| %>
    <div class="form-group">
      <h4> <%= current_user.name %></h4> <%= f.hidden_field :user_id, value: current_user.id %>
    </div><br>
    <div class="form-group">
      <%= f.text_area :body, required: true, class: "form-control" %>
    </div><br>
    <div class="form-group">
      Your rating:  <%= f.select :rating, (1..5), required: true %>
    </div><br>

    <%= f.submit class: "btn btn-primary" %>
  <% end %>

<% end %>
